<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.ac.ceh.ir" version="{APP_VER}"
        android-versionCode="100{BUNDLE_VER}009"
        ios-CFBundleVersion="{BUNDLE_VER}"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>{APP_TITLE}</name>
    <description>
        {APP_DESCRIPTION}
    </description>
    <author email="apps@ceh.ac.uk" href="http://ceh.ac.uk">
        CEH App Development Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-datepicker" spec="~0.9.3" />
    <plugin name="cordova-plugin-keyboard" spec="~1.1.3" />
    <plugin name="cordova-plugin-geolocation" spec="~2.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.2" />
    <plugin name="cordova-plugin-device" spec="~1.1.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.0" />
    <plugin name="cordova-plugin-camera" spec="~2.1.0" />
    <plugin name="cordova-plugin-file" spec="~4.1.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.2.0" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/images/ios/icon/AppIcon.appiconset/Icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/images/ios/icon/icon-60.png" width="60" height="60" />
        <icon src="www/images/ios/icon/AppIcon.appiconset/Icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/images/ios/icon/AppIcon.appiconset/Icon-76.png" width="76" height="76" />
        <icon src="www/images/ios/icon/AppIcon.appiconset/Icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="www/images/ios/icon/AppIcon.appiconset/Icon-40.png" width="40" height="40" />
        <icon src="www/images/ios/icon/AppIcon.appiconset/Icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="www/images/ios/icon/Icon.png" width="57" height="57" />
        <icon src="www/images/ios/icon/Icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/images/ios/icon/Icon-72.png" width="72" height="72" />
        <icon src="www/images/ios/icon/Icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/images/ios/icon/AppIcon.appiconset/Icon-Small.png" width="29" height="29" />
        <icon src="www/images/ios/icon/AppIcon.appiconset/Icon-Small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/images/ios/icon/Icon-Small-50.png" width="50" height="50" />
        <icon src="www/images/ios/icon/Icon-Small-50@2x.png" width="100" height="100" />

        <!-- images are determined by width and height. The following are supported -->
        <splash src="www/images/ios/splash/Default~iphone.png" width="320" height="480"/>
        <splash src="www/images/ios/splash/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="www/images/ios/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="www/images/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="www/images/ios/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="www/images/ios/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="www/images/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="www/images/ios/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="www/images/ios/splash/Default-736h.png" width="1242" height="2208"/>
        <splash src="www/images/ios/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
    <platform name="android">
        <icon src="www/images/android/icon/mipmap-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="www/images/android/icon/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="www/images/android/icon/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="www/images/android/icon/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />

        <!-- you can use any density that exists in the Android project -->
        <splash src="www/images/android/splash/drawable-land-hdpi-screen.png" density="land-hdpi"/>
        <splash src="www/images/android/splash/drawable-land-ldpi-screen.png" density="land-ldpi"/>
        <splash src="www/images/android/splash/drawable-land-mdpi-screen.png" density="land-mdpi"/>
        <splash src="www/images/android/splash/drawable-land-xhdpi-screen.png" density="land-xhdpi"/>
        <splash src="www/images/android/splash/drawable-land-xxhdpi-screen.png" density="land-xxxhdpi"/>
        <splash src="www/images/android/splash/drawable-land-xxxhdpi-screen.png" density="land-xxxhdpi"/>

        <splash src="www/images/android/splash/drawable-port-hdpi-screen.png" density="port-hdpi"/>
        <splash src="www/images/android/splash/drawable-port-ldpi-screen.png" density="port-ldpi"/>
        <splash src="www/images/android/splash/drawable-port-mdpi-screen.png" density="port-mdpi"/>
        <splash src="www/images/android/splash/drawable-port-xhdpi-screen.png" density="port-xhdpi"/>
        <splash src="www/images/android/splash/drawable-port-xxhdpi-screen.png" density="port-xxhdpi"/>
        <splash src="www/images/android/splash/drawable-port-xxxhdpi-screen.png" density="port-xxxhdpi"/>
    </platform>
    <preference name="KeyboardDisplayRequiresUserAction" value="false"/>
    <!--see https://calendee.com/2015/03/03/polish-app-launch-with-cordova-splashscreen-plugin/-->
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
</widget>
